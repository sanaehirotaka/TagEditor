@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<fieldset>
    <legend>プロンプト</legend>
    <div class="row mb-1 align-items-center">
        <div class="col">
            <div class="input-group">
                <button class="btn btn-primary" id="generateTitle">🔄</button>
                <input type="text" class="form-control" id="title" />
            </div>
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col">
            Prompt:
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col-12">
            提案:
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col-12">
            <textarea rows="3" class="form-control" id="prompt"></textarea>
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col-12" id="candicates">
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col">
            Negative:
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col-12">
            <textarea rows="2" class="form-control" id="negative"></textarea>
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col">
            <button class="btn btn-primary" id="randomBtn">🎲</button>
            <button class="btn btn-primary" id="magicBtn">🪄</button>
        </div>
    </div>
</fieldset>
<fieldset>
    <legend>履歴</legend>
    <div class="row mb-1 align-items-center">
        <div class="col-12">
            <button class="btn btn-primary" id="clearHistory">履歴を削除</button>
        </div>
    </div>
    <div class="row mb-1 align-items-center">
        <div class="col-12" id="histories">
        </div>
    </div>
</fieldset>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <div>
        </div>
        <div>
            <a class="btn btn-primary" href="/Config">設定</a>
            <input type="button" class="btn btn-primary" value="保存" id="save" />
        </div>
    </div>
</nav>

